{% extends ":admin:music.html.twig" %}
{% block body %}
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Ajouter un single</h3>
                </div>
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                <div class="box-body">
                    <div class="form-group">
                        {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.filename, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.filename) }}
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-info pull-right'}}) }}
                    {{ form_rest(form) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        {% if songs %}
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="box box-info">
                    <div class="box-header">
                        Genres disponible
                    </div>
                    <div class="box-body no-padding">
                        <table class="table table-responsive">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Nom</th>
                                <th>Supprimer</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for song in songs %}
                                <tr>
                                    <td>{{ song.id }}</td>
                                    <td>{{ song.title }}</td>
                                    <td>
                                        <a href="#"
                                           class="btn btn-danger">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer">
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 alert alert-info">
                <p class="text-center">Aucun single disponible</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
