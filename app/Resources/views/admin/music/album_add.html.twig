{% extends ":admin:music.html.twig" %}
{% block body %}
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Ajouter un album</h3>
                </div>
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                <div class="box-body">
                    <div class="form-group">
                        {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.file, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.file) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.cover, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.cover) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.year, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.year) }}
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-info pull-right'}}) }}
                    {{ form_rest(form) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        {% if albums %}
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="box box-info">
                    <div class="box-header">
                        Genres disponible
                    </div>
                    <div class="box-body no-padding">
                        <table class="table table-responsive">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Nom</th>
                                <th>Ann√©e</th>
                                <th>Image</th>
                                <th>Supprimer</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for album in albums %}
                                <tr>
                                    <td>{{ album.id }}</td>
                                    <td>{{ album.name }}</td>
                                    <td>{{ album.year | date('Y') }}</td>
                                    <td><img src="{{ asset('img/covers/') }}{{ album.cover }}" class="img-responsive"></td>
                                    <td>
                                        <a href="{{ path('app_admin_musicalbumremove', {'id': album.id}) }}"
                                           class="btn btn-danger">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer">

                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3 alert alert-info">
                <p>Aucun album n'est actuellement disponible</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
