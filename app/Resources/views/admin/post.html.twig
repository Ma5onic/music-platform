{% extends ":admin:base.html.twig" %}
{% block small_description %}Post{% endblock %}
{% set post = 'true' %}
{% block body %}
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-8">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
        {% if posts %}
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                <div class="box box-info">
                    <div class="box-header">
                        Posts disponibles
                    </div>
                    <div class="box-body no-padding">
                        <table class="table table-responsive">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Titre</th>
                                <th>Date</th>
                                <th>Supprimer</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for post in posts %}
                                <tr>
                                    <td>{{ post.id }}</td>
                                    <td>{{ post.title }}</td>
                                    <td>{{ post.date | date('Y-m-d') }}</td>
                                    <td>
                                        <a href="#"
                                           class="btn btn-danger">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer">

                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3 alert alert-info">
                <p>Aucun post n'est actuellement disponible</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
