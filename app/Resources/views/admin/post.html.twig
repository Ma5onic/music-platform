{% extends ":admin:base.html.twig" %}
{% block small_description %}Post{% endblock %}
{% set post = 'true' %}
{% block body %}
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Ajouter un post</h3>
                </div>
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                <div class="box-body">
                    <div class="form-group">
                        {{ form_label(form.title, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.content, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-info pull-right'}}) }}
                    {{ form_rest(form) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        {% if posts %}
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Posts disponibles</h3>
                    </div>
                    <div class="box-body no-padding">
                        <table class="table table-responsive">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Titre</th>
                                <th>Date</th>
                                <th>Supprimer</th>
                                <th>Editer</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for post in posts %}
                                <tr>
                                    <td>{{ post.id }}</td>
                                    <td>{{ post.title }}</td>
                                    <td>{{ post.date | date('Y-m-d') }}</td>
                                    <td>
                                        <a href="#"
                                           class="btn btn-danger">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-warning">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer">

                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3 alert alert-info">
                <p>Aucun post n'est actuellement disponible</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
